<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AdvanceDialogTheme" parent="@style/AppTheme">
        <item name="android:windowAnimationStyle">@style/AdvanceDialogAnimation</item>
        <item name="windowNoTitle">true</item>
        <item name="android:elevation">5dp</item>
        <item name="android:popupElevation">5dp</item>
        <item name="addElevationShadow">true</item>
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="dialogCornerRadius">25dp</item>
    </style>

    <style name="AdvanceDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left_side</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right_side</item>
    </style>


    <style name="AboutDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="AboutDialogTheme" parent="@style/ThemeOverlay.Material3.Dialog">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:windowAnimationStyle">@style/AboutDialogAnimation</item>
        <!--        <item name="android:textColor">@color/white</item>-->
        <item name="dialogCornerRadius">25dp</item>
        <!--        <item name="android:background">@color/darkPrimary</item>-->
    </style>

    <style name="FullScreenDialogStyle">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>



